<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#36B3EC">


    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="242dp"
        android:layout_height="155dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/aayah" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF5722"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewVoiceass"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="@string/voiceAss"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/textViewWelcome"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="9dp"
        android:layout_toStartOf="@+id/textViewWelcome"
        android:src="@drawable/ic_call_white_36dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignStart="@+id/textViewWelcome"
        android:layout_alignTop="@+id/imageView6"
        android:layout_marginStart="50dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_cloud_white_36dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView5"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="-6dp"
        android:src="@drawable/ic_date_range_white_36dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_below="@+id/imageView3"
        android:layout_alignEnd="@+id/imageViewLogo"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="-8dp"
        android:src="@drawable/ic_email_white_36dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="27dp"
        android:layout_toStartOf="@+id/imageView2"
        android:src="@drawable/ic_location_on_white_36dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="138dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/play" />

</RelativeLayout>
